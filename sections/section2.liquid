<div class="custom-mauritius-section">
  <div class="container">
    <div class="content-wrapper">
      
      <!-- Left Text Block -->
      <div class="text-block">
        <h2 class="heading">
          {{ section.settings.heading }}
        </h2>
        <p class="description">
          {{ section.settings.description }}
        </p>
        
        <div class="buttons">
          {% if section.settings.btn1_text != blank %}
            <a href="{{ section.settings.btn1_link }}" class="btn-primary">{{ section.settings.btn1_text }}</a>
          {% endif %}
          {% if section.settings.btn2_text != blank %}
            <a href="{{ section.settings.btn2_link }}" class="btn-secondary">{{ section.settings.btn2_text }}</a>
          {% endif %}
        </div>

        <div class="stats">
          <div class="stat">
             {% if section.settings.sticon1 %}
            <img src="{{section.settings.sticon1}}" height="20px" width="20px">
            {% endif %}
            <h4>{{ section.settings.stat1_number }}</h4>
            <p>{{ section.settings.stat1_text }}</p>
          </div>
          <div class="stat">
             {% if section.settings.sticon2 %}
            <img src="{{section.settings.sticon2}}" height="20px" width="20px">
            {% endif %}
            <h4>{{ section.settings.stat2_number }}</h4>
            <p>{{ section.settings.stat2_text }}</p>
          </div>
          <div class="stat">
              {% if section.settings.sticon3%}
            <img src="{{section.settings.sticon3}}" height="20px" width="20px">
            {% endif %}
            <h4>{{ section.settings.stat3_number }}</h4>
            <p>{{ section.settings.stat3_text }}</p>
          </div>
          <div class="stat">
               {% if section.settings.sticon4 %}
            <img src="{{section.settings.sticon4}}" height="20px" width="20px">
            {% endif %}
            <h4>{{ section.settings.stat4_number }}</h4>
            <p>{{ section.settings.stat4_text }}</p>
          </div>
        </div>
      </div>

      <!-- Right Image Grid -->
      <div class="image-grid">
        {% if section.settings.image1 %}
          <img src="{{ section.settings.image1 | image_url }}" alt="image1">
        {% endif %}
        {% if section.settings.image2 %}
          <img src="{{ section.settings.image2 | image_url }}" alt="image2">
        {% endif %}
        {% if section.settings.image3 %}
          <img src="{{ section.settings.image3 | image_url }}" alt="image3">
        {% endif %}
        {% if section.settings.image4 %}
          <img src="{{ section.settings.image4 | image_url }}" alt="image4">
        {% endif %}
      </div>
    </div>
  </div>
</div>

