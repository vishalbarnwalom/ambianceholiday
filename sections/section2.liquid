{% stylesheet %}
.custom-mauritius-section {
  padding: 80px 0;
  background: #fff;
}

.custom-mauritius-section .container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.custom-mauritius-section .content-wrapper {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 60px;
  align-items: center;
}

.custom-mauritius-section .heading {
  font-size: 36px;
  font-weight: 700;
  line-height: 1.3;
  color: #009688;
  margin-bottom: 20px;
}

.custom-mauritius-section .description {
  color: #444;
  font-size: 16px;
  line-height: 1.6;
  margin-bottom: 25px;
}

.custom-mauritius-section .buttons {
  margin-bottom: 35px;
}

.custom-mauritius-section .buttons a {
  display: inline-block;
  margin-right: 15px;
  padding: 12px 24px;
  border-radius: 6px;
  font-weight: 600;
  text-decoration: none;
  transition: all 0.3s ease;
}

.custom-mauritius-section .btn-primary {
  background: #009688;
  color: #fff;
}

.custom-mauritius-section .btn-primary:hover {
  background: #00796b;
}

.custom-mauritius-section .btn-secondary {
  border: 2px solid #009688;
  color: #009688;
}

.custom-mauritius-section .btn-secondary:hover {
  background: #009688;
  color: #fff;
}

.custom-mauritius-section .stats {
  display: flex;
  gap: 25px 40px;
  margin-top: 20px;
}

.custom-mauritius-section .stat {
  flex: 1 1 45%;
  min-width: 120px;
}

.custom-mauritius-section .stat h4 {
  font-size: 22px;
  font-weight: 700;
  margin-bottom: 5px;
  color: #076283;
}

.custom-mauritius-section .stat p {
  font-size: 13px;
  color: #666;
}

/* Image Grid */
.custom-mauritius-section .image-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20px;
}

.custom-mauritius-section .image-grid img {
  width: 100%;
  border-radius: 14px;
  object-fit: cover;
  display: block;
}

/* âœ… Responsive Design */
@media (max-width: 1024px) {
  .custom-mauritius-section .content-wrapper {
    gap: 40px;
  }

  .custom-mauritius-section .heading {
    font-size: 30px;
  }
}

@media (max-width: 768px) {
  .custom-mauritius-section .content-wrapper {
    grid-template-columns: 1fr;
    text-align: center;
  }

  .custom-mauritius-section .buttons {
    display: flex;
    justify-content: center;
    gap: 15px;
    flex-wrap: wrap;
  }

  .custom-mauritius-section .stats {
    justify-content: center;
  }

  .custom-mauritius-section .stat {
    flex: 1 1 40%;
    text-align: center;
  }

  .custom-mauritius-section .image-grid {
    grid-template-columns: 1fr 1fr;
    gap: 15px;
  }
}

@media (max-width: 480px) {
  .custom-mauritius-section .heading {
    font-size: 26px;
  }

  .custom-mauritius-section .description {
    font-size: 14px;
  }

  .custom-mauritius-section .stats {
    gap: 15px;
  }

  .custom-mauritius-section .image-grid {
    grid-template-columns: 1fr;
  }
}
{% endstylesheet %}

