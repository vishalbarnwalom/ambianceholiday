{{ 'section-customvideo.css' | asset_url | stylesheet_tag }}

<div class="custom-video-section{% if section.settings.custom_class != blank %} {{ section.settings.custom_class }}{% endif %}">
  <div class="custom-video-wrapper">
    {%- if section.settings.video_url != blank -%}
      <video 
        class="custom-video-player" 
        autoplay 
        loop 
        muted 
        playsinline
        poster="{{ section.settings.cover_image | image_url: width: 1920 }}"
      >
        <source src="{{ section.settings.video_url }}" type="video/mp4">
      </video>
    {%- elsif section.settings.cover_image != blank -%}
      {{ section.settings.cover_image | image_url: width: 1920 | image_tag: 
        class: 'custom-video-fallback',
        loading: 'lazy'
      }}
    {%- endif -%}
  </div>

  <div class="custom-video-content">
    {%- if section.settings.overline_text != blank -%}
      <div class="custom-video-overline">{{ section.settings.overline_text }}</div>
    {%- endif -%}

    {%- if section.settings.heading != blank -%}
      <h2 class="custom-video-heading">{{ section.settings.heading }}</h2>
    {%- endif -%}

    {%- if section.settings.description != blank -%}
      <div class="custom-video-description">{{ section.settings.description }}</div>
    {%- endif -%}

    <div class="custom-video-buttons">
      {%- if section.settings.button_text != blank -%}
        <a href="{{ section.settings.button_text_link | default: '#' }}" class="custom-video-button custom-video-button-primary">
          {{ section.settings.button_text }}
        </a>
      {%- endif -%}
      {%- if section.settings.button_text_2 != blank -%}
        <a href="{{ section.settings.button_text_link_2 | default: '#' }}" class="custom-video-button custom-video-button-secondary">
          {{ section.settings.button_text_2 }}
        </a>
      {%- endif -%}
    </div>
         <div class="scroll" id="scrollArrow">
            <p>Scroll to explore</p>
                  <img src="https://cdn.shopify.com/s/files/1/0666/0866/0591/files/darrow.svg?v=1758528002" alt="down arrow">
        </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom Video Banner",
  "settings": [
    {
      "type": "header",
      "content": "Media"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL",
      "info": "Add MP4 video URL"
    },
    {
      "type": "image_picker",
      "id": "cover_image",
      "label": "Cover Image",
      "info": "Displayed while video loads or if video cannot be played"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "overline_text",
      "label": "Overline Text",
      "default": "Immerse yourself in a"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Bespoke Mauritian Experience"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Discover the magic of Mauritius with our expertly crafted, personalized travel experiences. From pristine beaches to cultural adventures, we create memories that last a lifetime.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Primary Button Text",
      "default": "Plan Your Journey"
    },
    {
      "type": "url",
      "id": "button_text_link",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "button_text_2",
      "label": "Secondary Button Text",
      "default": "Discover Experiences"
    },
    {
      "type": "url",
      "id": "button_text_link_2",
      "label": "Secondary Button Link"
    },
    {
      "type": "header",
      "content": "Custom Settings"
    },
    {
      "type": "text",
      "id": "custom_class",
      "label": "Custom CSS Class"
    }
  ],
  "presets": [
    {
      "name": "Custom Video Banner",
      "category": "Video"
    }
  ]
}
{% endschema %}