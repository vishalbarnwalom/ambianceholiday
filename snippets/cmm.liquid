<script>
  // Optional JS â€“ agar tum click toggle chahte ho hover ki jagah
  document.querySelectorAll('.mega-nav > ul > li > a').forEach(item => {
    item.addEventListener('click', e => {
      e.preventDefault();
      const parent = item.parentElement;
      parent.classList.toggle('open');
      document.querySelectorAll('.mega-nav > ul > li').forEach(li => {
        if (li !== parent) li.classList.remove('open');
      });
    });
  });
</script>
