<style>
.mega-menu-wrapper {
  position: absolute;
  top: 100%;
  left: 0;
  width: 100%;
  display: none;
  background: #fff;
  z-index: 100;
  height: 600px;
  box-shadow: 0 4px 20px rgba(0,0,0,0.1);
}

.nav-item:hover .mega-menu-wrapper {
  display: flex;
}

.mega-menu-inner {
  display: grid;
  grid-template-columns: 300px 1fr 1fr; /* left, middle, right */
  width: 100%;
  height: 100%;
}

/* Left scroll panel */
.mega-left {
  overflow-y: auto;
  border-right: 1px solid #eee;
  padding: 20px;
}

.mega-left ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.mega-left li {
  padding: 10px 5px;
  cursor: pointer;
  font-size: 15px;
  font-weight: 500;
  transition: background 0.2s;
}

.mega-left li:hover {
  background: #f9f9f9;
}

/* Sub menu middle panel */
.mega-middle {
  padding: 20px;
  border-right: 1px solid #eee;
  display: none;
}

.mega-middle.active {
  display: block;
}

.mega-middle h4 {
  margin: 0 0 10px 0;
  font-size: 16px;
  font-weight: bold;
}

.mega-middle ul {
  list-style: none;
  padding: 0;
}

.mega-middle li {
  margin: 6px 0;
}

.mega-middle li a {
  text-decoration: none;
  font-size: 14px;
  color: #333;
}

.mega-middle li a:hover {
  color: #d10024;
}

/* Right image panel */
.mega-right {
  padding: 20px;
}

.mega-right img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
</style>

<nav class="custom-mega-nav">
  <ul>
    <!-- MEN -->
    <li class="nav-item">
      <a href="#">Man</a>
      <div class="mega-menu-wrapper">
        <div class="mega-menu-inner">
          <!-- LEFT -->
          <div class="mega-left">
            <ul>
              <li data-target="winter">Winter Wear</li>
              <li data-target="summer">Summer Wear</li>
              <li data-target="tshirt">Tshirts</li>
              <li data-target="jeans">Jeans</li>
            </ul>
          </div>

          <!-- MIDDLE (Sub collections) -->
          <div class="mega-middle" id="winter">
            <h4>Winter Wear</h4>
            <ul>
              <li><a href="/collections/mens-puffer">Puffer Jackets</a></li>
              <li><a href="/collections/mens-hoodie">Hoodies</a></li>
              <li><a href="/collections/mens-coats">Coats</a></li>
            </ul>
          </div>

          <div class="mega-middle" id="summer">
            <h4>Summer Wear</h4>
            <ul>
              <li><a href="/collections/mens-shorts">Shorts</a></li>
              <li><a href="/collections/mens-linen">Linen Shirts</a></li>
            </ul>
          </div>

          <div class="mega-middle" id="tshirt">
            <h4>Tshirts</h4>
            <ul>
              <li><a href="/collections/mens-polo">Polo</a></li>
              <li><a href="/collections/mens-oversized">Oversized</a></li>
            </ul>
          </div>

          <div class="mega-middle" id="jeans">
            <h4>Jeans</h4>
            <ul>
              <li><a href="/collections/mens-skinny">Skinny Fit</a></li>
              <li><a href="/collections/mens-regular">Regular Fit</a></li>
            </ul>
          </div>

          <!-- RIGHT -->
          <div class="mega-right">
            <img src="https://cdn.your-image-link.jpg" alt="Mens Banner">
          </div>
        </div>
      </div>
    </li>

    <!-- WOMEN -->
    <li class="nav-item">
      <a href="#">Woman</a>
      <!-- same structure like MEN (left + middle + right) -->
    </li>

    <!-- 24/7 -->
    <li class="nav-item">
      <a href="#">24/7</a>
      <!-- same structure -->
    </li>
  </ul>
</nav>

<script>
  // Show sub-collections on hover
  document.querySelectorAll('.mega-left li').forEach(item => {
    item.addEventListener('mouseenter', () => {
      // hide all middle panels
      document.querySelectorAll('.mega-middle').forEach(panel => {
        panel.classList.remove('active');
      });
      // show the one linked
      const target = item.getAttribute('data-target');
      document.getElementById(target)?.classList.add('active');
    });
  });
</script>
