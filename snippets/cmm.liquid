<style>
    @media (max-width: 990px) {
  .custom-mega-nav {
    display: none !important;
  }
}

/* Base nav */
.custom-mega-nav {
  background: #fff;
  border-bottom: 1px solid #eee;
  font-family: Arial, sans-serif;
  position: relative;
}

.custom-mega-nav > ul {
  display: flex;
  gap: 30px;
  padding: 0 20px;
  margin: 0;
  list-style: none;
  height: 60px;
  align-items: center;
}

.custom-mega-nav > ul > li {
  position: relative;
}

.custom-mega-nav > ul > li > a {
  text-decoration: none;
  color: #222;
  font-weight: 600;
  font-size: 15px;
  padding: 10px 0;
  display: block;
}

/* Mega wrapper */
.mega-menu {
  position: absolute;
  top: 100%;
  left: 0;
  width: 100%;
  background: #fff;
  box-shadow: 0 8px 20px rgba(0,0,0,0.1);
  padding: 30px;
  display: none;
  grid-template-columns: 250px 1fr 1fr;
  gap: 30px;
  z-index: 1000;
}

.nav-item:hover .mega-menu {
  display: grid;
}

/* Left categories */
.mega-left ul {
  list-style: none;
  margin: 0;
  padding: 0;
}

.mega-left li {
  padding: 8px 0;
  cursor: pointer;
  font-weight: 500;
  color: #444;
  transition: color 0.2s;
}

.mega-left li:hover {
  color: #d10024;
}

/* Middle subcategories */
.mega-middle {
  display: none;
}

.mega-middle.active {
  display: block;
}

.mega-middle h4 {
  font-size: 16px;
  margin-bottom: 10px;
  font-weight: 600;
}

.mega-middle ul {
  list-style: none;
  padding: 0;
  margin: 0;
  columns: 2; /* 2 columns sublinks */
}

.mega-middle li {
  margin: 6px 0;
}

.mega-middle li a {
  text-decoration: none;
  font-size: 14px;
  color: #333;
}

.mega-middle li a:hover {
  color: #d10024;
}

/* Right banner */
.mega-right img {
  width: 100%;
  height: auto;
  border-radius: 8px;
}
</style>

<nav class="custom-mega-nav">
  <ul>
    <!-- Men -->
    <li class="nav-item">
      <a href="#">Men</a>
      <div class="mega-menu">
        <!-- LEFT -->
        <div class="mega-left">
          <ul>
            <li data-target="men-winter">Winter Wear</li>
            <li data-target="men-summer">Summer Wear</li>
            <li data-target="men-tshirt">Tshirts</li>
            <li data-target="men-jeans">Jeans</li>
          </ul>
        </div>

        <!-- MIDDLE -->
        <div class="mega-middle" id="men-winter">
          <h4>Winter Wear</h4>
          <ul>
            <li><a href="#">Puffer Jackets</a></li>
            <li><a href="#">Hoodies</a></li>
            <li><a href="#">Coats</a></li>
          </ul>
        </div>

        <div class="mega-middle" id="men-summer">
          <h4>Summer Wear</h4>
          <ul>
            <li><a href="#">Shorts</a></li>
            <li><a href="#">Linen Shirts</a></li>
          </ul>
        </div>

        <div class="mega-middle" id="men-tshirt">
          <h4>Tshirts</h4>
          <ul>
            <li><a href="#">Polo</a></li>
            <li><a href="#">Oversized</a></li>
          </ul>
        </div>

        <div class="mega-middle" id="men-jeans">
          <h4>Jeans</h4>
          <ul>
            <li><a href="#">Skinny Fit</a></li>
            <li><a href="#">Regular Fit</a></li>
          </ul>
        </div>

        <!-- RIGHT -->
        <div class="mega-right">
          <img src="https://via.placeholder.com/400x400" alt="Men Banner">
        </div>
      </div>
    </li>

    <!-- Women -->
    <li class="nav-item">
      <a href="#">Women</a>
      <div class="mega-menu">
        <div class="mega-left">
          <ul>
            <li data-target="women-tops">Tops</li>
            <li data-target="women-dresses">Dresses</li>
            <li data-target="women-shoes">Shoes</li>
          </ul>
        </div>

        <div class="mega-middle" id="women-tops">
          <h4>Tops</h4>
          <ul>
            <li><a href="#">Crop Tops</a></li>
            <li><a href="#">Shirts</a></li>
          </ul>
        </div>

        <div class="mega-middle" id="women-dresses">
          <h4>Dresses</h4>
          <ul>
            <li><a href="#">Party Wear</a></li>
            <li><a href="#">Casual</a></li>
          </ul>
        </div>

        <div class="mega-middle" id="women-shoes">
          <h4>Shoes</h4>
          <ul>
            <li><a href="#">Heels</a></li>
            <li><a href="#">Sneakers</a></li>
          </ul>
        </div>

        <div class="mega-right">
          <img src="https://via.placeholder.com/400x400" alt="Women Banner">
        </div>
      </div>
    </li>

    <!-- 24/7 -->
    <li class="nav-item">
      <a href="#">24/7</a>
      <div class="mega-menu">
        <div class="mega-left">
          <ul>
            <li data-target="casual">Casual</li>
            <li data-target="formal">Formal</li>
          </ul>
        </div>

        <div class="mega-middle" id="casual">
          <h4>Casual</h4>
          <ul>
            <li><a href="#">Everyday Tshirts</a></li>
            <li><a href="#">Joggers</a></li>
          </ul>
        </div>

        <div class="mega-middle" id="formal">
          <h4>Formal</h4>
          <ul>
            <li><a href="#">Blazers</a></li>
            <li><a href="#">Shirts</a></li>
          </ul>
        </div>

        <div class="mega-right">
          <img src="https://via.placeholder.com/400x400" alt="24/7 Banner">
        </div>
      </div>
    </li>
  </ul>
</nav>

<script>
document.querySelectorAll('.mega-left li').forEach(item => {
  item.addEventListener('mouseenter', () => {
    const parent = item.closest('.mega-menu');
    parent.querySelectorAll('.mega-middle').forEach(panel => {
      panel.classList.remove('active');
    });
    const target = item.getAttribute('data-target');
    parent.querySelector(`#${target}`)?.classList.add('active');
  });
});
</script>
